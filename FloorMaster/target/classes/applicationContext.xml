<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
          http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.3.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
          http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd
">
    
    <bean id = "tDao" class = "com.mycompany.floormaster.dao.TaxDaoImpl" />
    
    <bean id = "pDao" class = "com.mycompany.floormaster.dao.ProductsDaoImpl" />
    
    <bean id = "oDao" class = "com.mycompany.floormaster.dao.OrderDaoImpl" />
    
    <bean id = "console" class="com.mycompany.consoleio.ConsoleIO" />
    
    <bean id = "aDao" class= "com.mycompany.floormaster.dao.AuditDaoImpl"/>
    
    <bean id ="auditAspect" class ="com.mycompany.floormaster.aop.AuditAspect">
        <constructor-arg  ref = "aDao"/>
    </bean>
    
    <bean id = "timerAspect" class = "com.mycompany.floormaster.aop.TimerAspect"/>

    <bean id = "fmController" class = "com.mycompany.floormaster.controller.FloorMasterController" >
        <constructor-arg ref = "tDao" />
        <constructor-arg ref = "pDao" />
        <constructor-arg ref = "oDao" />
        <constructor-arg ref = "console" /> 
    </bean>
    
     <aop:config>
         
         <aop:aspect ref = "timerAspect">
             <aop:around method="timeMethod" pointcut="execution(* com.mycompany.floormaster.dao.OrderDao.decode(..))"/>
         </aop:aspect>
         
        <aop:aspect ref="auditAspect">
            <aop:after method= "createAudit" pointcut= "execution(* com.mycompany.floormaster.dao.OrderDao.delete(..))"/>
            <aop:after method= "createAudit" pointcut= "execution(* com.mycompany.floormaster.dao.OrderDao.update(..))"/>
            <aop:after method= "createAudit" pointcut= "execution(* com.mycompany.floormaster.dao.OrderDao.add(..))"/>
        </aop:aspect>    
            
    </aop:config>
    
    
</beans>
